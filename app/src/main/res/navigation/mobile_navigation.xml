<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.impact.assistantapp.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_nav_home_to_weatherMainFragment"
            app:destination="@id/weatherMainFragment" />
    </fragment>

    <fragment
        android:id="@+id/nav_todo"
        android:name="com.impact.assistantapp.ui.todo.TodoFragment"
        android:label="@string/menu_todo"
        tools:layout="@layout/fragment_todo" />

    <fragment
        android:id="@+id/nav_finance"
        android:name="com.impact.assistantapp.ui.finance.FinanceFragment"
        android:label="@string/menu_finance"
        tools:layout="@layout/fragment_finance" />
    <fragment
        android:id="@+id/weatherMainFragment"
        android:name="com.impact.assistantapp.ui.weather.WeatherMainFragment"
        android:label="Погода"
        tools:layout="@layout/weather_main_fragment" />
</navigation>